                            {{#if loggedIn}}
                            <li><a href="/dashboard">My Recipes</a></li>
                            <li><a href="USER/logout" id="logout">Logout</a></li>
                            {{else}}
                            <li><a href="USER/login">Login</a></li>
                            {{/if}}
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <main>
